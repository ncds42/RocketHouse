block intro

block content
	if galleries.length
		each gallery in galleries
			div.jumbotron.galleryContainer
				#magicCarousel.carousel.slide(data-ride="carousel")
					.carousel-inner(role="listbox")
						each image, i in gallery.images
							if i == 0
								.carousel-item.active
									img.galleryImage.d-block.w-100(src=image.limit(400,400)).img-rounded
							else
								.carousel-item
									img.galleryImage.d-block.w-100(src=image.limit(400,400)).img-rounded
				a.carousel-control-prev(href="#magicCarousel" role="button" data-slide="prev")
					span.carousel-control-prev-icon
					span.sr-only Previous
				a.carousel-control-next(href="#magicCarousel" role="button" data-slide="next")
					span.carousel-control-next-icon
					span.sr-only Next
	else
